{{>header}}

<center><h1>Inicio de sesión</h1></center>

<div class="container">
  <form class="form-horizontal" action="/ingresar2" method="post">
    <div class="form-group">
      <label class="control-label col-sm-2" for="id">Documento de identidad:</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" placeholder="Ingrese su documento de identidad" name="identificador" required="required">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="password">Contraseña:</label>
      <div class="col-sm-10">
        <input type="password" class="form-control" placeholder="Ingrese su contraseña" name="password" required="required">
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
       <center> <button type="submit" class="btn btn-default">Ingresar</button></center>
      </div>
    </div>
  </form>
</div>

{{>footer}}